WindowTitle {tracjk}
WindowSize  280 65
Font "xft:Noto Sans cjk kr:style=Bold:size=14" 

Init
 Begin
  Set $Track = (GetOutput {exec mpctrack} 1 -1)
  Set $Artist = (GetOutput {exec mpcartist} 1 -1)


  ChangeTitle 1 $Track
  ChangeTitle 2 $Artist

End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 5)==0 Then
  Begin
  Set $Track = (GetOutput {exec mpctrack} 1 -1)
  Set $Artist = (GetOutput {exec mpcartist} 1 -1)

   ChangeTitle 1 $Track
   ChangeTitle 2 $Artist

  End
End

Widget 1
Property
 Position 0 0
 Size 280 40
 Font "xft:Noto Sans cjk kr:style=Bold:size=14"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  Do {Exec killall feh}              
  End
End

Widget 2
Property
 Position 0 35
 Size 280 30
 Font "xft:Noto Sans cjk kr:style=Regular:size=10"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  Do {Exec mpc toggle}              
  End
End

