WindowTitle {Dato}
WindowSize  280 120
Font "xft:Bebas Neue:style=Bold:size=25" 

Init
 Begin
  Set $Time = (GetOutput {exec date "+%H:%M"} 1 -1)
  Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)
  Set $Date1 = (GetOutput {exec date "+%j days around the sun"} 1 -1)


  ChangeTitle 1 $Time
  ChangeTitle 2 $Date
  ChangeTitle 3 $Date1

End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 10)==0 Then
  Begin
   Set $Time = (GetOutput {exec date "+%H:%M"} 1 -1)
   Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)
   Set $Date1 = (GetOutput {exec date "+%j days around the sun"} 1 -1)


   ChangeTitle 1 $Time
   ChangeTitle 2 $Date
   ChangeTitle 3 $Date1

  End
End

Widget 1
Property
 Position 0 0
 Size 280 45
 Font "xft:Bebas Neue:style=Bold:size=25"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  ChangeForeColor 1 {#8ac9f4} 
  End
End

