WindowTitle {meteo2}
WindowSize  131 298

Font "xft:Weather Icons:style=Bold:size=15" 

Init
 Begin
  
  Set $homeDir = (GetOutput {echo $HOME} 1 -1) {/.fvwm/}
  Set $Icon = $homeDir {pixmaps/bubbles/mt.png}
  Set $wiwi2 = (GetOutput {exec wiwi2} 1 -1)
  Set $wewe2 = (GetOutput {exec wewe2} 1 -1)
  Set $wewe3 = (GetOutput {exec wewe3} 1 -1)
  Set $forecast2 = (GetOutput {exec forecast2} 1 -1)

  ChangeIcon 1 $Icon
  ChangeTitle 2 $wiwi2
  ChangeTitle 3 $wewe2
  ChangeTitle 4 $wewe3
  ChangeTitle 5 $forecast2

End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 1800)==0 Then
  Begin

   Set $homeDir = (GetOutput {echo $HOME} 1 -1) {/.fvwm/}
   Set $Icon = $homeDir {pixmaps/bubbles/mt.png}
   Set $wiwi2 = (GetOutput {exec wiwi2 } 1 -1)
   Set $wewe2 = (GetOutput {exec wewe2} 1 -1)
   Set $wewe3 = (GetOutput {exec wewe3} 1 -1)
   Set $forecast2 = (GetOutput {exec forecast2} 1 -1)


   ChangeIcon 1 $Icon
   ChangeTitle 2 $wiwi2
   ChangeTitle 3 $wewe2
   ChangeTitle 4 $wewe3
   ChangeTitle 5 $forecast2

  End
End

