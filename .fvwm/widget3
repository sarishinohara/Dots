WindowTitle {widget3}
WindowSize  298 128
Font "xft:Noto Sans cjk kr:style=Bold:size=14" 

Init
 Begin
  Set $Track = (GetOutput {exec mpctrack} 1 -1)
  Set $Artist = (GetOutput {exec mpcartist} 1 -1)


  ChangeTitle 1 $Track
  ChangeTitle 2 $Artist

End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 5)==0 Then
  Begin
  Set $Track = (GetOutput {exec mpctrack} 1 -1)
  Set $Artist = (GetOutput {exec mpcartist} 1 -1)

   ChangeTitle 1 $Track
   ChangeTitle 2 $Artist

  End
End

Widget 1
Property
 Position 0 30
 Size 298 40
 Font "xft:Roboto:style=Bold:size=12"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  Do {Exec killall feh}              
  End
End

Widget 2
Property
 Position 0 65
 Size 298 20
 Font "xft:Roboto:style=Italic:size=9"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  Do {Exec mpc toggle}              
  End
End

