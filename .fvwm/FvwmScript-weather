WindowTitle {weather}
WindowSize  280 50
Font "xft:Weather Icons:style=Bold:size=15" 

Init
 Begin
  Set $Time = (GetOutput {exec wiwi2} 1 -1)
  Set $Date = (GetOutput {exec wewe} 1 -1)

  ChangeTitle 1 $Time
  ChangeTitle 2 $Date
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 1800)==0 Then
  Begin
   Set $Time = (GetOutput {exec wiwi2 } 1 -1)
   Set $Date = (GetOutput {exec wewe} 1 -1)

   ChangeTitle 1 $Time
   ChangeTitle 2 $Date
  End
End

Widget 1
Property
 Position 0 0
 Size 280 25
 Font "xft:Weather icons:style=Regular:size=15"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  ChangeForeColor 1 {#5394c9}
  End
End

Widget 2
Property
 Position 0 30
 Size 280 20
 Font "xft:Bebas neue:style=Regular:size=15"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  ChangeForeColor 2 {#5394c9}
  End
End
