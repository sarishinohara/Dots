WindowTitle {Musica}
WindowSize  280 140
Font "xft:Bebas Neue:style=Bold:size=10" 
Colorset  8


Init
 Begin
  Set $artist = (GetOutput {exec mpc -f '%albumartist%' | head -1} 1 -1)
  Set $track = (GetOutput {exec mpc -f '%title%' | head -1} 1 -1)
  Set $album = (GetOutput {exec mpc -f '%album%' | head -1} 1 -1)

  ChangeTitle 1 $artist
  ChangeTitle 2 $track
  ChangeTitle 3 $album
  ShowWidget 4

End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 10)==0 Then
  Begin
   Set $artist = (GetOutput {exec mpcartist} 1 -1)
   Set $track = (GetOutput {exec mpctrack} 1 -1)
   Set $album = (GetOutput {exec mpcalbum} 1 -1)

   ChangeTitle 1 $artist
   ChangeTitle 2 $track
   ChangeTitle 3 $album
   ShowWidget 4

  End
End

Widget 1
Property
 Position 0 0
 Size 280 50
 Font "xft:Bebas Neue:style=Bold:size=10"
 Type ItemDraw
 Colorset  8
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  Do {Exec killall feh && album}              
  End
End

Widget 2
Property
 Position 0 40
 Size 280 45
 Font "xft:Bebas Neue:style=Regular:size=10"
 Type ItemDraw
 Colorset  8
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  Do {Exec mpc toggle}              
  End
End

Widget 3
Property
 Position 0 80
 Size 280 45
 Font "xft:Bebas Neue:style=Regular:size=10"
 Type ItemDraw
 Colorset  8
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  ChangeForeColor 3 {#5394c9}
  End
End

Widget 4
Property
 Size   192 30
 Position 44 -24
 Type   SwallowExec
 Title    {tets6}
 SwallowExec  {Module FvwmScript tets6}
 Colorset 8
 Main
 Case message of
  SingleClic :
  Begin
  End
End
