WindowTitle {Musica}
WindowSize  280 140
Font "xft:Bebas Neue:style=Bold:size=10" 
Colorset  8


Init
 Begin
  Set $Time = (GetOutput {exec mpcartist} 1 -1)
  Set $Date = (GetOutput {exec mpctrack} 1 -1)
  Set $Date1 = (GetOutput {exec mpcalbum} 1 -1)

  ChangeTitle 1 $Time
  ChangeTitle 2 $Date
  ChangeTitle 3 $Date1

End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 10)==0 Then
  Begin
   Set $Time = (GetOutput {exec mpcartist} 1 -1)
   Set $Date = (GetOutput {exec mpctrack} 1 -1)
   Set $Date1 = (GetOutput {exec mpcalbum} 1 -1)

   ChangeTitle 1 $Time
   ChangeTitle 2 $Date
   ChangeTitle 3 $Date1

  End
End

Widget 1
Property
 Position 0 0
 Size 280 50
 Font "xft:Bebas Neue:style=Bold:size=10"
 Type ItemDraw
 Colorset  8
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  Do {Exec killall feh}              
  End
End

Widget 2
Property
 Position 0 40
 Size 280 45
 Font "xft:Bebas Neue:style=Regular:size=10"
 Type ItemDraw
 Colorset  8
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  Do {Exec mpc toggle}              
  End
End

Widget 3
Property
 Position 0 80
 Size 280 45
 Font "xft:Bebas Neue:style=Regular:size=10"
 Type ItemDraw
 Colorset  8
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  ChangeForeColor 3 {#5394c9}
  End
End
