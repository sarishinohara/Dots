WindowTitle {meteo}
WindowSize  298 298
Font "xft:Weather Icons:style=Bold:size=15" 

Init
 Begin
  Set $Time = (GetOutput {exec wiwi2} 1 -1)
  Set $Date = (GetOutput {exec wewe2} 1 -1)
  Set $Date1 = (GetOutput {exec wewe3} 1 -1)
  Set $Date2 = (GetOutput {exec forecast2} 1 -1)

  ChangeTitle 1 $Time
  ChangeTitle 2 $Date
  ChangeTitle 3 $Date1
  ChangeTitle 4 $Date2

End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 1800)==0 Then
  Begin
   Set $Time = (GetOutput {exec wiwi2 } 1 -1)
   Set $Date = (GetOutput {exec wewe2} 1 -1)
   Set $Date1 = (GetOutput {exec wewe3} 1 -1)
   Set $Date2 = (GetOutput {exec forecast2} 1 -1)


   ChangeTitle 1 $Time
   ChangeTitle 2 $Date
   ChangeTitle 3 $Date1
   ChangeTitle 4 $Date2

  End
End

Widget 1
Property
 Position 0 50
 Size 298 80
 Font "xft:Weather icons:style=Bold:size=40"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  ChangeForeColor 1 {#8ac9f4}
  End
End

