WindowTitle {widget111}
WindowSize  298 298
WindowPosition -274 -85
Font "xft:Noto Sans cjk kr:style=Bold:size=14" 

Init
 Begin
  Set $Desk = (GetOutput {exec wc -l < ~/.fvwm/memento_file} 1 -1)
  Set $homeDir = (GetOutput {echo $HOME} 1 -1) {/.fvwm/}
  Set $Icon = $homeDir {pixmaps/llll.png}
  Set $notif = $homeDir {pixmaps/bubbles/nnn.png}
  Set $notif2 = $homeDir {pixmaps/bubbles/lll.png}
  Set $bla = (GetOutput {echo @ } 1 -1)
  Set $Host = $bla (GetOutput {exec hostname } 1 -1)
  Set $User = (GetOutput {exec whoami} 1 -1)
  Set $test = (GetOutput {exec xdotool get_desktop} 1 -1)



  Set $tasksFile = $homeDir {memento_file}

  Set $num = {wc -l < ~/.fvwm/memento_file} 


  ChangeIcon 1 $Icon
  ChangeTitle 4 $User
  ChangeTitle 5 $Host
  Set $getNrTasks = {cat "} $tasksFile {" | wc -l}
  Set $nrTasks = (GetOutput $getNrTasks 1 -1)
  Set $getTasks = {cat "} $tasksFile {"}
  If $nrTasks > 0 Then
  Begin
    Set $Desk = $nrTasks
    ChangeTitle 3 $nrTasks
    ChangeIcon 2 $notif
    ChangeColorset 3 11
   
  End
  Else
  Begin
    If $nrTasks == 0 Then
    Begin
    Set $Desk = $nrTasks
    ChangeTitle 3 $nrTasks
    ChangeIcon 2 $notif
    ChangeColorset 3 12
    End
  End
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk00 = (GetOutput {echo 0} 1 -1)
  If $Deskcurrent == $Desk00 Then
  Begin
    ChangeColorset 6 11  
  End
  Else
  Begin
    ChangeColorset 6 28  
  End  
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk11 = (GetOutput {echo 1} 1 -1)
  If $Deskcurrent == $Desk11 Then
  Begin
    ChangeColorset 7 11
  End
  Else
  Begin
    ChangeColorset 7 28  
  End  
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk22 = (GetOutput {echo 2} 1 -1)
    If $Deskcurrent == $Desk22 Then
  Begin
    ChangeColorset 8 11  
  End
  Else
  Begin
    ChangeColorset 8 28  
  End  
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk33 = (GetOutput {echo 3} 1 -1)
    If $Deskcurrent == $Desk33 Then
  Begin
    ChangeColorset 9 11  
  End
  Else
  Begin
    ChangeColorset 9 28  
  End  
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk44 = (GetOutput {echo 4} 1 -1)
    If $Deskcurrent == $Desk44 Then
  Begin
    ChangeColorset 10 11  
  End
  Else
  Begin
    ChangeColorset 10 28  
  End  
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk55 = (GetOutput {echo 5} 1 -1)
    If $Deskcurrent == $Desk55 Then
  Begin
    ChangeColorset 11 11
 
  End
  Else
  Begin
    ChangeColorset 11 28  
  End  
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk66 = (GetOutput {echo 6} 1 -1)
    If $Deskcurrent == $Desk66 Then
  Begin
    ChangeColorset 12 11  
  End
  Else
  Begin
    ChangeColorset 12 28  
  End  


End

PeriodicTasks
## First Page
Begin
 If (RemainderOfDiv (GetTime) 30)==0 Then
 Begin
  Set $getNrTasks = {cat "} $tasksFile {" | wc -l}
  Set $nrTasks = (GetOutput $getNrTasks 1 -1)
  Set $getTasks = {cat "} $tasksFile {"}
  If $nrTasks > 0 Then
  Begin
    Set $Desk = $nrTasks
    ChangeTitle 3 $nrTasks
    ChangeIcon 2 $notif
    ChangeColorset 3 11
   
  End
  Else
  Begin
    If $nrTasks == 0 Then
    Begin
