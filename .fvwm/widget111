  Begin
    ChangeColorset 6 11  
  End
  Else
  Begin
    ChangeColorset 6 28  
  End  
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk11 = (GetOutput {echo 1} 1 -1)
  If $Deskcurrent == $Desk11 Then
  Begin
    ChangeColorset 7 11
  End
  Else
  Begin
    ChangeColorset 7 28  
  End  
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk22 = (GetOutput {echo 2} 1 -1)
    If $Deskcurrent == $Desk22 Then
  Begin
    ChangeColorset 8 11  
  End
  Else
  Begin
    ChangeColorset 8 28  
  End  
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk33 = (GetOutput {echo 3} 1 -1)
    If $Deskcurrent == $Desk33 Then
  Begin
    ChangeColorset 9 11  
  End
  Else
  Begin
    ChangeColorset 9 28  
  End  
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk44 = (GetOutput {echo 4} 1 -1)
    If $Deskcurrent == $Desk44 Then
  Begin
    ChangeColorset 10 11  
  End
  Else
  Begin
    ChangeColorset 10 28  
