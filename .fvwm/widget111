    ChangeIcon 2 $notif
    ChangeColorset 3 12
    End
  End
  Set $Deskcurrent = (GetOutput {exec xdotool get_desktop} 1 -1)
  Set $Desk00 = (GetOutput {echo 0} 1 -1)
