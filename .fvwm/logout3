WindowTitle {logout3}
WindowSize  1366 768
Colorset 41
Font "xft:Noto Sans cjk kr:style=Bold:size=14" 

Init
 Begin
  Set $Desk = (GetOutput {exec wc -l < ~/.fvwm/memento_file} 1 -1)
  Set $homeDir = (GetOutput {echo $HOME} 1 -1) {/.fvwm/}
  Set $Icon = $homeDir {pixmaps/llll.png}
  Set $notif = $homeDir {pixmaps/bubbles/nnn.png}
  Set $notif2 = $homeDir {pixmaps/bubbles/lll.png}
  Set $bla = (GetOutput {echo @ } 1 -1)
  Set $Host = $bla (GetOutput {exec hostname } 1 -1)
  Set $User = (GetOutput {exec whoami} 1 -1)
  Set $Lock = $homeDir {pixmaps/padlock.png}
  Set $Sleep = $homeDir {pixmaps/sus.png}
  Set $Reboot = $homeDir {pixmaps/refresh.png}
  Set $PowerOff = $homeDir {pixmaps/pow.png}




  Set $tasksFile = $homeDir {memento_file}

  Set $num = {wc -l < ~/.fvwm/memento_file} 


  ChangeIcon 2 $Icon
  ChangeIcon 3 $notif
  ChangeTitle 4 $Desk
  ChangeTitle 5 $User
  ChangeTitle 6 $Host
  ChangeIcon 7 $Lock
  ChangeIcon 8 $Sleep
  ChangeIcon 9 $Reboot
  ChangeIcon 10 $PowerOff



End

PeriodicTasks
## First Page
Begin
 If (RemainderOfDiv (GetTime) 5)==0 Then
 Begin
  Set $getNrTasks = {cat "} $tasksFile {" | wc -l}
  Set $nrTasks = (GetOutput $getNrTasks 1 -1)
  Set $getTasks = {cat "} $tasksFile {"}
  If $nrTasks > 0 Then
  Begin
    Set $Desk = $nrTasks
    ChangeTitle 4 $nrTasks
    ChangeIcon 3 $notif
    ChangeColorset 4 11
   
  End
  Else
  Begin
    If $nrTasks == 0 Then
    Begin
    Set $Desk = $nrTasks
    ChangeTitle 4 $nrTasks
    ChangeIcon 3 $notif
    ChangeColorset 4 12
    End
  End
 End
End
  


